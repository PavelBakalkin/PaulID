---
import Link from "./Link.astro";
---

<header class="m-8 py-8 px-5">
  <nav class="flex mx-auto max-w-screen-2xl justify-between">
    <a
      data-animBio="text"
      href="/"
      class="font-semibold text-center text-3xl !leading-3"
      >Paul<span class="text-[#ffef00]">ID</span></a
    >
    <div
      data-animBio="text"
      class="flex flex-col sm:flex-row text-right sm:text-center"
    >
      <Link
        href="https://www.linkedin.com/in/pavel-bakalkin-9976b5204/"
        title="LinkedIn"
        styles={"mb-5 sm:mb-0"}
      />
      <Link
        href="mailto: pavel.b18f@gmail.com"
        title="Mail"
        isMail={true}
        styles={"mb-5 sm:mb-0"}
      />
      <Link href="https://github.com/PavelBakalkin" title="Github" />
    </div>
  </nav>
</header>

<script>
  import anime from "animejs";

  anime.set('[data-animBio="text"]', { opacity: 0, translateY: "-2rem" });

  anime({
    targets: '[data-animBio="text"]',
    translateY: 0,
    opacity: { value: 1, easing: "linear", duration: 150 },
    easing: "spring(1, 75, 10, 15)",
    delay: anime.stagger(100),
  });
</script>
